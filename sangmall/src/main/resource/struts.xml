<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
 	<constant name="struts.objectFactory" value="spring" /> 
	<constant name="struts.multipart.maxSize" value="20971520"/>
    <!-- 请求参数的编码方式--> 
    <constant name="struts.i18n.encoding" value="UTF-8"/> 
    <!-- 指定被struts2处理的请求后缀类型。多个用逗号隔开--> 
    <constant name="struts.action.extension" value="do"/> 
    <!-- 当struts.xml改动后，是否重新加载。默认值为false(生产环境下使用),开发阶段最好打开  --> 
    <constant name="struts.configuration.xml.reload" value="true"/> 
    <!-- 是否使用struts的开发模式。开发模式会有更多的调试信息。默认值为false(生产环境下使用),开发阶段最好打开  --> 
    <constant name="struts.devMode" value="false"/>   
    <!-- 设置浏览器是否缓存静态内容。默认值为true(生产环境下使用),开发阶段最好关闭  --> 
    <constant name="struts.serve.static.browserCache" value="false" /> 
    <!-- 是否开启动态方法调用--> 
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/> 
    <!-- <constant name="struts.multipart.saveDir" value="C:\\upload_temp"></constant> -->
    
	<!--  <package name="authority" namespace="/" extends="struts-default"> -->
	<package name="authority" namespace="/" extends="json-default">
	
		<interceptors>  
            <interceptor name="authority"  
                class="com.sangmall.admin.interceptor.LoginInterceptor">  
            </interceptor>  
            <!-- 拦截器栈 -->  
            <interceptor-stack name="mydefault">  
                <interceptor-ref name="defaultStack" />  
                <interceptor-ref name="authority" />  
            </interceptor-stack>  
        </interceptors>
     
		<!-- 定义全局Result -->
		<global-results>
			<!-- 当返回login视图名时，转入/login.jsp页面 -->
			<result name="login">Admin_login.do</result>
		</global-results>

		<!--action name="User_login" class="com.sangmall.action.UserAction" method="login">
			 <result name="success">json/json.jsp</result>
		</action-->
		
		<action name="Admin_login" class="com.sangmall.admin.action.AdminAction" method="login">
			 <result name="success">admin/jsp/Admin/login.jsp</result>
			 <result name="json">admin/json/json.jsp</result>
		</action>
		
		<action name="Admin_*" class="com.sangmall.admin.action.AdminAction" method="{1}">
			 <result name="success">admin/jsp/Admin/{1}.jsp</result>
			 <result name="json">admin/json/json.jsp</result>
			 <interceptor-ref name="mydefault" />
		</action>
		
		<action name="*_*" class="com.sangmall.action.{1}Action" method="{2}">
			 <result name="success">jsp/{1}/{2}.jsp</result>
			 <result name="json">json/json.jsp</result>
			 <!--interceptor-ref name="mydefault" /-->
		</action>
		
	</package>
	 
</struts>